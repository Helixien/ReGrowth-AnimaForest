<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--============================ Anima Tree Biome =============================-->
	<BiomeDef>
		<defName>RG_AnimaForest</defName>
		<label>anima forest</label>
		<description>A legendary biome featured in folk tales of tribal groups for centuries. Highly revered, this forest allows ancient tribes to gain immense psychic powers, but it requires respect and absence of any technology. Players can choose to settle in Anima Forest, angering other tribes and possibly excavating rare resources at the cost of the wrath of the forest.</description>
		<workerClass>ReGrowthCore.BiomeWorker_AnimaForest</workerClass>
		<animalDensity>1.5</animalDensity>
		<plantDensity>1.5</plantDensity>
		<settlementSelectionWeight>0.25</settlementSelectionWeight>
		<movementDifficulty>1.5</movementDifficulty>
		<texture>World/Biomes/AnimaForest</texture>
		<forageability>0.5</forageability>
		<foragedFood>RawFungus</foragedFood>
		<allowRoads>true</allowRoads>
		<allowRivers>true</allowRivers>
		<wildPlantRegrowDays>15</wildPlantRegrowDays>
		<soundsAmbient>
			<li>Ambient_NightInsects_Jungle</li>
			<li>Ambient_DayInsects_Jungle</li>
		</soundsAmbient>
		<diseaseMtbDays>35</diseaseMtbDays>
		<diseases>
			<li>
				<diseaseInc>RG_Disease_PsychicBrainworm</diseaseInc>
				<commonality>100</commonality>
			</li>
			<li>
				<diseaseInc>RG_Disease_AnimaSpores</diseaseInc>
				<commonality>100</commonality>
			</li>
			<li>
				<diseaseInc>RG_Disease_PsychicInsanity</diseaseInc>
				<commonality>100</commonality>
			</li>
			<li>
				<diseaseInc>RG_Disease_NeuralMigraine</diseaseInc>
				<commonality>100</commonality>
			</li>
			<li>
				<diseaseInc>Disease_Flu</diseaseInc>
				<commonality>100</commonality>
			</li>
			<li>
				<diseaseInc>Disease_FibrousMechanites</diseaseInc>
				<commonality>30</commonality>
			</li>
			<li>
				<diseaseInc>Disease_SensoryMechanites</diseaseInc>
				<commonality>30</commonality>
			</li>
		</diseases>
		<terrainsByFertility>
			<li>
				<terrain>RG_AnimaSoil</terrain>
				<min>-999</min>
				<max>0.90</max>
			</li>
			<li>
				<terrain>RG_AnimaSoilEnchanted</terrain>
				<min>0.90</min>
				<max>999</max>
			</li>
		</terrainsByFertility>
		<terrainPatchMakers>
            <li>
                <perlinFrequency>0.015</perlinFrequency>
                <perlinLacunarity>1.8</perlinLacunarity>
                <minSize>20</minSize>
                <thresholds>
                    <li>
                        <terrain>RG_AnimaSpringSand</terrain>
                        <min>-999</min>
                        <max>-1</max>
                    </li>
                    <li>
                        <terrain>RG_AnimaSpring</terrain>
                        <min>-1.0</min>
                        <max>-0.95</max>
                    </li>
                    <li>
                        <terrain>RG_AnimaSpringDeep</terrain>
                        <min>-0.95</min>
                        <max>-0.70</max>
                    </li>
                    <li>
                        <terrain>RG_AnimaSpring</terrain>
                        <min>-0.70</min>
                        <max>-0.55</max>
                    </li>
                    <li>
                        <terrain>RG_AnimaSpringSand</terrain>
                        <min>-0.55</min>
                        <max>-0.45</max>
                    </li>
                    <li>
                        <terrain>RG_AnimaSoilEnchanted</terrain>
                        <min>-0.45</min>
                        <max>-0.38</max>
                    </li>
                </thresholds>
            </li>
		</terrainPatchMakers>
		<baseWeatherCommonalities>
			<Clear>18</Clear>
			<Rain>10</Rain>
			<DryThunderstorm>1</DryThunderstorm>
			<RainyThunderstorm>10</RainyThunderstorm>
			<FoggyRain>10</FoggyRain>
			<RG_PsychicFog>2</RG_PsychicFog>
		</baseWeatherCommonalities>
		<wildPlants>
			<Plant_Grass>6</Plant_Grass>
			<Plant_TallGrass>2</Plant_TallGrass>
			<Plant_GrassAnima>6</Plant_GrassAnima>
			<Plant_Moss>2.0</Plant_Moss>
			<RG_Plant_MysticCap>0.5</RG_Plant_MysticCap>
			<RG_Plant_AnimaBell>0.05</RG_Plant_AnimaBell>
			<RG_Plant_AnimaBrambles>3</RG_Plant_AnimaBrambles>
			<RG_Plant_TreeAnimaSapling>0.4</RG_Plant_TreeAnimaSapling>
			<RG_Plant_TreeAnima>0.5</RG_Plant_TreeAnima>
			<RG_Plant_TreeAnimaGrand>0.03</RG_Plant_TreeAnimaGrand>
		</wildPlants>
		<wildAnimals>
			<Thrumbo>0.2</Thrumbo>
		</wildAnimals>
		<allowedPackAnimals>
			<li>Muffalo</li>
			<li>Elephant</li>
			<li>Alpaca</li>
		</allowedPackAnimals>
		<modExtensions>
			<li Class="VFECore.BiomeExtension">
				<terrainsToSwap>
					<li>
						<from>Gravel</from>
						<to>RG_AnimaSoilCracked</to>
					</li>
				</terrainsToSwap>
				<skipGenSteps>
					<li>ScatterRoadDebris</li>
					<li>ScatterCaveDebris</li>
					<li>AncientUtilityBuilding</li>
					<li>MechanoidRemains</li>
					<li>AncientTurret</li>
					<li>AncientMechs</li>
					<li>AncientLandingPad</li>
					<li>AncientFences</li>
					<li>AncientPipelineSection</li>
					<li>AncientJunkClusters</li>
					<li>AnimaTrees</li>
					<li>ScatterRuinsSimple</li>
					<li>ScatterShrines</li>
				</skipGenSteps>
			</li>
		</modExtensions>
	</BiomeDef>
</Defs>